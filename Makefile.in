PACKAGE=db
DOC=db4pl
include ../Makefile.defs
CFLAGS+= -I.

LIBPL=		db.pl
TARGETS=	db4pl.$(SO)

DBOBJ=		db4pl.o atom.o error.o

all:		$(TARGETS)

db4pl.$(SO):	$(DBOBJ)
		$(LD) $(LDSOFLAGS) -o $@ $(DBOBJ) $(LIBS)

install:	$(LIBPL)
		mkdir -p $(DESTDIR)$(PLBASE)/lib/$(PLARCH)
		$(INSTALL_PROGRAM) $(TARGETS) $(DESTDIR)$(PLBASE)/lib/$(PLARCH)
		$(INSTALL_DATA) $(LIBPL) $(DESTDIR)$(PLBASE)/library
		$(PL) -f none -g make -t halt

ln-install::
		@$(MAKE) INSTALL='../ln-install' \
			 INSTALL_DATA='../ln-install' \
			 INSTALL_PROGRAM='../ln-install' \
			 install

html-install::
		mkdir -p $(DESTDIR)$(PKGDOC)
		$(INSTALL) -m 644 $(DOC).html $(DESTDIR)$(PKGDOC)

pdf-install::
		mkdir -p $(DESTDIR)$(PKGDOC)
		$(INSTALL) -m 644 $(DOC).pdf $(DESTDIR)$(PKGDOC)

uninstall:
		(cd $(PLBASE)/library && rm -f $(LIBPL))
		$(PL) -f none -g make -t halt

################################################################
# Check
################################################################

check::

################################################################
# Clean
################################################################

clean:
		rm -f $(DBOBJ) *~ *% config.log

distclean:	clean
		rm -f $(TARGETS)
		rm -f config.h config.cache config.status Makefile
		rm -f $(TEX)
		$(RUNTEX) --clean $(DOC)
